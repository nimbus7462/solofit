<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="615dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bg_main_frame"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvDailySummaryTitle"
                android:layout_width="315dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_page_title"
                android:backgroundTintMode="add"
                android:fontFamily="@font/schibsted_grotesk"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:shadowColor="@color/cyan"
                android:shadowRadius="10"
                android:text="@string/daily_summary"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <LinearLayout
                android:id="@+id/mainInsideLayout"
                android:layout_width="315dp"
                android:layout_height="475dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_inner_panel"
                android:orientation="vertical"
                android:padding="30dp">

                <LinearLayout
                    android:id="@+id/firstrow_summ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txvCompletedQuests"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:shadowColor="@color/bright_green"
                                android:shadowRadius="10"
                                android:text="@string/completed_quests"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txvCompletedQuestsVal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:shadowColor="@color/bright_green"
                                android:shadowRadius="10"
                                android:text="10"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txvCancelledQuests"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:shadowColor="@color/bright_red"
                                android:shadowRadius="10"
                                android:text="@string/cancelled_quests"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txvCancelledQuestsVal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:shadowColor="@color/bright_red"
                                android:shadowRadius="10"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/secondrow_summ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txvCurrStreakSumm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:gravity="center"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/current_streak"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/txvCurrStreakValueSumm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:gravity="center"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txvCurrDaysSumm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:gravity="center"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/days"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txvExpGained"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:gravity="center"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/exp_gained"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txvExpCalculationVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:gravity="center"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="70 x 1.05 = 74"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thirdrow_summ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txvSummExp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/exp"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|end"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txvSummTitleText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:fontFamily="@font/schibsted_grotesk"
                                android:shadowColor="@color/cyan"
                                android:shadowRadius="10"
                                android:text="@string/title"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/txvSummUserTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/schibsted_grotesk"
                                android:shadowColor="@color/bright_green"
                                android:shadowRadius="10"
                                android:text="TextView"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progBarSummLevel"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_outer_progbar"
                        android:max="150"
                        android:paddingStart="8dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="8dp"
                        android:progress="67"
                        android:progressTint="@color/white"
                        android:progressTintMode="add" />

                    <TextView
                        android:id="@+id/txvSummExpValues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/schibsted_grotesk"
                        android:gravity="end"
                        android:shadowColor="@color/cyan"
                        android:shadowRadius="10"
                        android:text="67 / 150"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fourthrow_summ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imvSummStrIcon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/icon_str" />

                        <TextView
                            android:id="@+id/txvSummStr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/str"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvSummStrValHere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="20"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvSummGainedStr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="(+2)"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imvSummEndIcon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/icon_end" />

                        <TextView
                            android:id="@+id/txvSummEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/end"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvSummEndValHere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="10"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvSummGainedEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="(+1)"
                            android:textColor="@color/white"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imvSummVitIcon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/icon_vit" />

                        <TextView
                            android:id="@+id/txvSummVit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/vit"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvSummVitValHere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="30"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvSummGainedVit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="(+10)"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnQuestSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_start_button"
            android:fontFamily="@font/nanum_myeongjo"
            android:shadowColor="@color/cyan"
            android:shadowRadius="10"
            android:text="@string/quest_summary_button"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>