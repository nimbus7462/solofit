<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clo_manage_quest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <TextView
        android:id="@+id/txvManageQuestTitle"
        android:layout_width="325dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_page_title"
        android:backgroundTintMode="add"
        android:fontFamily="@font/schibsted_grotesk"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:shadowColor="@color/cyan"
        android:shadowRadius="10"
        android:text="@string/manage_quests"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameSpinnerContainer"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txvManageQuestTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Sort Spinner (Left-Aligned) -->
        <Spinner
            android:id="@+id/spinner_sort"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_gravity="start"
            android:background="@drawable/bg_sort"
            android:popupBackground="@drawable/bg_inner_panel"
            android:textColor="@android:color/transparent"
            android:padding="8dp"
            android:spinnerMode="dropdown" />

        <!-- Filter Spinner (Right-Aligned) -->
        <Spinner
            android:id="@+id/spinner_filter"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:background="@drawable/bg_filter"
            android:popupBackground="@drawable/bg_inner_panel"
            android:textColor="@android:color/transparent"
            android:padding="8dp"
            android:spinnerMode="dropdown" />

        <ImageButton
            android:id="@+id/imbLegend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/icon_help" />
    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recView_ManageQuest"
        android:layout_width="315dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/bg_inner_panel"
        android:fadeScrollbars="false"
        android:padding="15dp"


        android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameSpinnerContainer"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ib_add_quest"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="Add Quest"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_add_quest"
        app:layout_constraintBottom_toBottomOf="@+id/recView_ManageQuest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recView_ManageQuest" />

    <View
        android:id="@+id/viewBackgroundBlocker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#D308133A"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cloConfirmation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_confirm_box"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txvConfirmationMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/play"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:shadowColor="@color/cyan"
                android:shadowRadius="10"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="43dp"
                tools:layout_editor_absoluteY="80dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnGoBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/bg_return_btn"
                    android:contentDescription="@string/go_back_btn"
                    android:fontFamily="@font/play"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvConfirmation"
                    tools:layout_editor_absoluteX="24dp" />

                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/bg_complete_btn"
                    android:contentDescription="@string/confirm_btn"
                    android:fontFamily="@font/play"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvConfirmation"
                    tools:ignore="UnknownId"
                    tools:layout_editor_absoluteX="261dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>