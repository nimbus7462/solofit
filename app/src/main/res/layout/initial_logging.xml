<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:background="@drawable/bg_sidepage_frame"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_page_title"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/txvInitLoggingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/schibsted_grotesk"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:shadowColor="@color/cyan"
                android:shadowRadius="10"
                android:text="@string/logging"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txvInitLoggingQuestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/play"
            android:gravity="center"
            android:shadowColor="@color/cyan"
            android:shadowRadius="10"
            android:text="Quest Name Here"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/addLog"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_logging_edit"
            android:ems="10"
            android:fontFamily="@font/play"
            android:gravity="start|top"
            android:hint="hint"
            android:inputType="textMultiLine"
            android:padding="20dp"
            android:shadowColor="@color/cyan"

            android:shadowRadius="10"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txvInitLoggingQuestStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inclusive_sans"
            android:gravity="center"
            android:shadowColor="@color/cyan"
            android:shadowRadius="10"
            android:text="@string/completed"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txvInitLoggingCompletedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/inclusive_sans"
            android:gravity="center"
            android:shadowColor="@color/cyan"
            android:shadowRadius="10"
            android:text="06/29/25"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnFinishLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_log_btn"
            android:fontFamily="@font/play"
            android:paddingBottom="4dp"
            android:shadowColor="@color/cyan"
            android:shadowRadius="10"
            android:text="@string/finish_logging"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="visible" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>