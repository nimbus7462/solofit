<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lloQuestHist"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_quest_item"
        android:backgroundTintMode="src_in"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imvQHist_Quest_icon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/icon_str" />

        <TextView
            android:id="@+id/txvQHist_Quest_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:fontFamily="@font/inclusive_sans"
            android:gravity="center"
            android:shadowColor="@color/cyan"
            android:shadowRadius="10"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imbLogBtn"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="140dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/log_icon"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon_log" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>