<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="615dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bg_main_frame"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvStatusTitle"
                android:layout_width="315dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_page_title"
                android:backgroundTintMode="add"
                android:fontFamily="@font/schibsted_grotesk"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:shadowColor="@color/cyan"
                android:shadowRadius="10"
                android:text="@string/status"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <LinearLayout
                android:id="@+id/mainInsideLayout"
                android:layout_width="315dp"
                android:layout_height="475dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_inner_panel"
                android:orientation="vertical"
                android:padding="30dp">

                <LinearLayout
                    android:id="@+id/firstrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lloPfpAndIgn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imvStatusPfp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginBottom="5dp"
                            android:contentDescription="@string/profile_pic"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/pfp" />

                        <TextView
                            android:id="@+id/txvStatusIgn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_myeongjo"
                            android:gravity="center"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="Username"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llolevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txvLevelValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:gravity="center_horizontal"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="30"
                            android:textColor="@color/white"
                            android:textSize="45sp" />

                        <TextView
                            android:id="@+id/txvStatusLevel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:gravity="center_horizontal"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/level"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/secondrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txvStatusExp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/exp"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|end"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txvStatusTitleText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:fontFamily="@font/schibsted_grotesk"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:shadowColor="@color/cyan"
                                android:shadowRadius="10"
                                android:text="@string/title"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/txvUserTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/schibsted_grotesk"
                                android:shadowColor="@color/bright_green"
                                android:shadowRadius="10"
                                android:text="TextView"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progBarStatusLevel"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_outer_progbar"
                        android:max="150"
                        android:paddingStart="8dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="8dp"
                        android:progress="67"
                        android:progressTint="@color/white"
                        android:progressTintMode="add" />

                    <TextView
                        android:id="@+id/txvExpValues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/schibsted_grotesk"
                        android:gravity="end"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:shadowColor="@color/cyan"
                        android:shadowRadius="10"
                        android:text="67 / 150"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thirdrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txvCurrStreak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:gravity="center"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/current_streak"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/txvCurrStreakValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:gravity="center"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txvCurrDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:gravity="center"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/days"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txvLongestStreak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:gravity="center"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/longest_streak"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/txvLongestStreakValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:gravity="center"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="20"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txvLongestDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:gravity="center"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/days"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fourthrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imvStatusStrIcon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/icon_str" />

                        <TextView
                            android:id="@+id/txvStatusStr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/str"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvStrValHere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="20"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imvStatusEndIcon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/icon_end" />

                        <TextView
                            android:id="@+id/txvStatusEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/end"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvEndValHere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="10"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imvStatusVitIcon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/icon_vit" />

                        <TextView
                            android:id="@+id/txvStatusVit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="@string/vit"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvVitValHere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/schibsted_grotesk"
                            android:padding="5dp"
                            android:shadowColor="@color/cyan"
                            android:shadowRadius="10"
                            android:text="30"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnQuestHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_start_button"
            android:fontFamily="@font/nanum_myeongjo"
            android:shadowColor="@color/cyan"
            android:shadowRadius="10"
            android:text="@string/quest_history_button"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>