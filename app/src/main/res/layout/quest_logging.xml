<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <!-- Centered CardView for Quest Info -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/questCardLogging"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="619dp"
            android:background="@drawable/frame1"
            android:padding="24dp">

            <ImageView
                android:id="@+id/titleImageLogging"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/logging"
                android:background="@drawable/white_border"
                android:padding="4dp"
                android:contentDescription="Quest Info Title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/questTitleLogging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 x 10 Push-Ups"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                app:layout_constraintTop_toBottomOf="@id/titleImageLogging"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:id="@+id/expRowLogging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/questTitleLogging"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:text="Completed / Aborted"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="06/29/25"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Bookmark + Text Layout -->
            <LinearLayout
                android:id="@+id/bookmarkTextWrapperLogging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_border"
                app:layout_constraintTop_toBottomOf="@id/expRowLogging"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/icon_notebook"
                        android:layout_width="41dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="Bookmark"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_notebook" />
                </LinearLayout>

                <TextView
                    android:id="@+id/questInstructionsLogging"
                    android:layout_width="251dp"
                    android:layout_height="95dp"
                    android:padding="12dp"
                    android:text="Pushed till failure for the last set..."
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Button Row -->
            <LinearLayout
                android:id="@+id/buttonRowLogging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/btnLogLogging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finish Logging"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#0D47A1" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
