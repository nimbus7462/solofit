<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cloAddEditQuest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <LinearLayout
        android:id="@+id/lloQuestboard"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:background="@drawable/bg_main_frame"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txvQuestsTitle"
            android:layout_width="315dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_page_title"
            android:backgroundTintMode="add"
            android:fontFamily="@font/schibsted_grotesk"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:shadowColor="@color/cyan"
            android:shadowRadius="10"
            android:text="@string/quests"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <!-- Sort & Filter Buttons at Far Edges -->

        <FrameLayout
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <!-- Sort Spinner (Left-Aligned) -->
            <Spinner
                android:id="@+id/spinner_sort"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="start"
                android:background="@drawable/bg_sort"
                android:popupBackground="@drawable/bg_inner_panel"
                android:textColor="@android:color/transparent"
                android:padding="8dp"
                android:spinnerMode="dropdown" />

            <!-- Filter Spinner (Right-Aligned) -->

            <Spinner
                android:id="@+id/spinner_filter"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:background="@drawable/bg_filter"
                android:popupBackground="@drawable/bg_inner_panel"
                android:textColor="@android:color/transparent"
                android:padding="8dp"
                android:spinnerMode="dropdown" />

            <ImageButton
                android:id="@+id/imbLegend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/icon_help" />

        </FrameLayout>

        <!-- RecyclerView for quests -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recView_quests"
            android:layout_width="315dp"
            android:layout_height="456dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_inner_panel"
            android:padding="15dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
